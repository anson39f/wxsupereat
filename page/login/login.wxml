<!--login.wxml-->
<view class="container">
  <view class="login-icon">
    <image class="login-img" src="../../imgs/login/login.png"></image>
  </view>
  <view class="login-from">

    <!--账号-->
    <view class="inputView">
      <image class="nameImage" src="http://files.jb51.net/file_images/article/201704/2017041809555556.png"></image>
      <label class="loginLab">账号</label>
      <input class="inputText" placeholder="请输入手机号或者邮箱" bindinput="phoneInput" />
    </view>
    <view class="line"></view>

    <!--密码-->
    <view class="inputView">
      <image class="keyImage" src="http://files.jb51.net/file_images/article/201704/2017041809555557.png"></image>
      <label class="loginLab">密码</label>
      <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" />
    </view>

    <!--按钮-->
    <view class="loginBtnView">
      <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">登录</button>
    </view>

    <!--按钮-->
    <view class="expressBtnView" hidden="{{false}}">
      <button class="loginBtn" type="default" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="sign">注册</button>
    </view>

    <!--按钮-->
    <view class="expressBtnView">
      <button class="loginBtn" type="default" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">快速结账</button>
    </view>
  </view>
</view>