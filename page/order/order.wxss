.container {
  background: #fff;
}

page {
  font-family: "Microsoft Yahei, Arial, Helvetica, sans-serif";
  font-size: 15px;
}

.header {
  display: block;
  margin: 0 auto;
  height: 120rpx;
  background: #feb70f;
  padding: 30rpx;
  color: #000;
  line-height: 2.4;
}

.title {
  text-align: center;
  font-size: 20px;
}

.order {
  display: inline-block;
  width: 100%;
  height: auto;
}

.order-container {
  width: 100%;
  height: 60rpx;
  margin-top: 2px;
}

.inside-container {
  width: 100%;
  height: 100%;
  font-size: 15px;
  flex-direction: row;
  font-family: "Microsoft Yahei, Arial, Helvetica, sans-serif";
  float: right;
}

.order-name {
  width: 620rpx;
  padding-left: 15px;
  float: left;
  padding-top: 5px;
  padding-bottom: 5px;
}

.order-count {
  padding-left: 10px;
  float: right;
  padding-top: 5px;
  padding-right: 10px;
}

.shop-name {
  font-weight: bold;
  font-size: 18px;
  font-family: "Microsoft Yahei, Arial, Helvetica, sans-serif";
  width: 100%;
  height: 50rpx;
  padding-left: 10px;
  padding-top: 10px;
}

.line {
  border-bottom: 1px dashed #000;
  width: 62%;
  height: 1px;
  margin-left: 3%;
  padding-right: 15%;
}

.line-cut {
  border-bottom: 1px dashed #000;
  width: 80%;
  height: 1px;
  margin-left: 3%;
  margin-top: 20rpx;
  padding-right: 15%;
}

.order .total {
  display: flex;
  flex-direction: row;
  float: right;
  font-size: 15px;
  /* border: 1px solid #000; */
}

.order .total .order-name {
  width: 90rpx;
  padding-left: 15px;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
}

.order .total .order-total {
  margin-right: 10rpx;
  padding-left: 5rpx;
  padding-top: 5rpx;
}

.confirm-btn {
  width: 135rpx;
  height: 66rpx;
  float: right;
  margin-right: 20px;
  color: #fff;
  background-color: #feb70f;
  font-size: 15px;
  clear: both;
  text-align: center;
  border-radius: 8%;
  line-height: 66rpx;
}

.img-container {
  width: 100%;
  height: 335px;
}

.empty-container {
  margin-left: 145px;
  margin-top: 200px;
}

.empty {
  width: 100px;
  height: 100px;
}

.confirm-container {
  /* display: inline-block; */
  flex-direction: column;
  margin-bottom: 5px;
  margin-top: 10px;
  float: right;
}

.left-container {
  float: left;
  margin-left: 69px;
  line-height: 35px;
  font-size: 15px;
}

.right-container {
  /* float: right; */
  margin-bottom: 5rpx;
  margin-right: 5px;
}

.tip {
  display: inline-block;
  color: orangered;
  margin-left: 20px;
}

/* 地址 */

.address {
  font-size: 30rpx;
  color: #606060;
  height: 150rpx;
  margin-bottom: 20rpx;
  background: #fff url(http://www.jibuu.cn/ImgServer/wx/bottom.jpg) repeat-x bottom;
  background-size: auto 1px;
}

.location {
  width: 80%;
  margin-left: 20rpx;
  padding-left: 50rpx;
  height: 150rpx;
  float: left;
  background: url(http://www.jibuu.cn/ImgServer/wx/loca.jpg) no-repeat left center;
  background-size: auto 50rpx;
}

.locationL {
  width: 10%;
  height: 150rpx;
  float: right;
  background: url(http://www.jibuu.cn/ImgServer/wx/kh.jpg) no-repeat center;
  background-size: auto 30rpx;
}

.lotit {
  font-size: 30rpx;
  color: #4a4a4a;
  margin-top: 38rpx;
}

.lotxt {
  font-size: 24rpx;
  color: #a4a4a4;
  margin-top: 5rpx;
}

