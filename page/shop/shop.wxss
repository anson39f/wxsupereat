.cart-detail, .cart-detail .mask {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.cart-detail .mask {
  background: rgba(0, 0, 0, 0.7);
}

.cart-detail .list {
  position: absolute;
  left: 0;
  bottom: 100rpx;
  width: 100%;
  background: #f7f7f7;
}

.cart-detail .list .item {
  color: #333;
  font-size: 36rpx;
  line-height: 50rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
}

.cart-detail .list .name {
  -webkit-flex: 1;
  width: 1;
  /* white-space: pre-line; */
  /* border: 1px solid #000; */
}

.cart-detail .list .total {
  width: 120rpx;
}

.cart-detail .list .reduce, .cart-detail .list .add {
  font-size: 50rpx;
  background: #feb70f;
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  border-radius: 50%;
}

.inside-content {
  float: left;
}

.cart-detail .list .num {
  width: 50rpx;
  text-align: center;
  margin: 0 5rpx;
}

