page {
  height: 100%;
  overflow: hidden;
}

.container {
  height: 100%;
  overflow: hidden;
}

.header {
  position: relative;
  background: #feb70f;
  padding: 20rpx 40rpx;
  color: #000;
  -webkit-transition: all 0.6s ease-in-out;
}

.header.hidden {
  /*-webkit-transform: translate3d(0,-290rpx,0);*/
  margin-top: -290rpx;
}

.header .logo {
  float: left;
  width: 130rpx;
  height: 130rpx;
  border: 2rpx solid #fff;
  border-radius: 50%;
  margin-right: 10px;
}

.header .name {
  padding-top: 10rpx;
  font-size: 36rpx;
  line-height: 60rpx;
}

.header .address {
  font-size: 30rpx;
  line-height: 32rpx;
  color: #333;
}

.header .deliveryfee {
  font-size: 30rpx;
  line-height: 32rpx;
  color: #333;
}

.header .welcome {
  color: #333;
  font-size: 30rpx;
  width: 100%;
  /* line-height: 70rpx; */
  margin: 10rpx;
  padding-top: 20rpx;
  white-space: pre-line;
}

.header .follow {
  position: absolute;
  right: 20px;
  top: 50px;
  font-size: 30rpx;
  line-height: 2;
  padding: 0 0.7em;
  border: 1rpx solid;
  border-radius: 30rpx;
}

.header .line {
  clear: both;
  width: 100%;
  height: 1px;
  border-bottom: 1px dashed #000;
  padding-top: 20rpx;
}

.header .desc {
  color: #333;
  font-size: 30rpx;
  line-height: 40rpx;
  padding-top: 20rpx;
}

